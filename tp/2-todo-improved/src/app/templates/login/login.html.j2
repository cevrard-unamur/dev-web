{% from "macro/form-error.html.j2" import form_error with context %}
{% from "macro/flask.html.j2" import flash_messages with context %}
{% extends "layout.html.j2" %}
{% block head %}
    <title>ToDo - Se connecter</title>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="h1">Connexion</h1>
        </div>
        <div class="col-md-6 offset-md-3 text-center mt-4">
            {{ flash_messages('success') }}
            <form method="POST" action="/login" novalidate class="mb-4">
                {{ form.csrf_token }}  <!-- {{ form.hidden_tag() }}  -->
                <div class="form-group">
                    <label>{{ form.username.label }}</label>
                    {{ form.username(class_='form-control') }}
                </div>
                <div class="form-group">
                    <label>{{ form.password.label }}</label>
                    {{ form.password(class_='form-control') }}
                </div>
                {{ form.submit(class_='btn btn-primary btn-lg btn-block') }}
            </form>
            {{ flash_messages('danger') }}
            {{ form_error(form) }}
            <a href="{{ url_for('register') }}" class="btn btn-link">
                Se cr√©er un compte
            </a>
        </div>
    </div>
{% endblock %}